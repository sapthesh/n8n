{
  "name": "Calendly â†’ Dropbox : Meeting Material Distributor",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "calendly/webhook",
        "responseMode": "onReceived"
      },
      "name": "Calendly Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 200][250, 200]
    },
    {
      "parameters": {
        "functionCode": "const event = $json.payload.event;\nreturn [{ json: { invitee: event.invitee.email, eventId: event.uuid, eventDate: event.start_time } }];"
      },
      "name": "Parse Event",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [450, 200][450, 200]
    },
    {
      "parameters": {
        "operation": "list",
        "path": "/meetings/{{ $json.eventId }}",
        "returnAll": true
      },
      "name": "List Meeting Files",
      "type": "n8n-nodes-base.dropbox",
      "typeVersion": 1,
      "position": [650, 200][650, 200]
    },
    {
      "parameters": {
        "operation": "zip",
        "zipName": "meeting-materials-{{ $json.eventId }}.zip",
        "binaryPropertyName": "data"
      },
      "name": "Archive Files",
      "type": "n8n-nodes-base.archive",
      "typeVersion": 1,
      "position": [850, 200][850, 200]
    },
    {
      "parameters": {
        "operation": "send",
        "toEmail": "{{ $json.invitee }}",
        "subject": "Your meeting materials",
        "text": "Please find attached the files for your upcoming meeting.",
        "attachments": [
          {
            "binaryPropertyName": "binary",
            "fileName": "meeting-materials.zip"
          }
        ]
      },
      "name": "Send Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 1,
      "position": [1050, 200][1050, 200]
    }
  ],
  "connections": {
    "Calendly Webhook": { "main": [["Parse Event", "main"]] },
    "Parse Event": { "main": [["List Meeting Files", "main"]] },
    "List Meeting Files": { "main": [["Archive Files", "main"]] },
    "Archive Files": { "main": [["Send Email", "main"]] }
  }
}
