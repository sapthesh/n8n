{
  "name": "Dropbox â†’ Shopify : New Product Media Upload",
  "nodes": [
    {
      "parameters": {
        "operation": "onFileCreated",
        "path": "/shopify-media"
      },
      "name": "Dropbox Trigger",
      "type": "n8n-nodes-base.dropboxTrigger",
      "typeVersion": 1,
      "position": [250, 200][250, 200]
    },
    {
      "parameters": {
        "functionCode": "const name = $json.name; const match = name.match(/prod-(\\d+)_/); if (!match) return [];\nreturn [{ json: { productId: match[1], fileName: name }, binary: item.binary }];"
      },
      "name": "Extract Product ID",
      "type": "n8n-nodes-base.functionItem",
      "typeVersion": 1,
      "position": [450, 200][450, 200]
    },
    {
      "parameters": {
        "operation": "addImage",
        "productId": "={{$json.productId}}",
        "binaryPropertyName": "binary"
      },
      "name": "Shopify Add Image",
      "type": "n8n-nodes-base.shopify",
      "typeVersion": 1,
      "position": [650, 200][650, 200]
    }
  ],
  "connections": {
    "Dropbox Trigger": { "main": [["Extract Product ID", "main"]] },
    "Extract Product ID": { "main": [["Shopify Add Image", "main"]] }
  }
}
