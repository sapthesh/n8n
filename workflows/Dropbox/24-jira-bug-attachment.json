{
  "name": "Dropbox → JIRA : Bug Report Auto‑Attachment",
  "nodes": [
    {
      "parameters": {
        "operation": "onFileCreated",
        "path": "/jira-bugs"
      },
      "name": "Dropbox Trigger",
      "type": "n8n-nodes-base.dropboxTrigger",
      "typeVersion": 1,
      "position": [250, 200][250, 200]
    },
    {
      "parameters": {
        "functionCode": "const match = $json.name.match(/([A-Z]+-\\d+)_/); if (!match) return [];\nreturn [{ json: { issueKey: match[1] }, binary: item.binary }];"
      },
      "name": "Extract Issue Key",
      "type": "n8n-nodes-base.functionItem",
      "typeVersion": 1,
      "position": [450, 200][450, 200]
    },
    {
      "parameters": {
        "operation": "addAttachment",
        "issueKey": "={{$json.issueKey}}",
        "binaryPropertyName": "binary"
      },
      "name": "JIRA Add Attachment",
      "type": "n8n-nodes-base.jira",
      "typeVersion": 1,
      "position": [650, 200][650, 200]
    }
  ],
  "connections": {
    "Dropbox Trigger": { "main": [["Extract Issue Key", "main"]] },
    "Extract Issue Key": { "main": [["JIRA Add Attachment", "main"]] }
  }
}
