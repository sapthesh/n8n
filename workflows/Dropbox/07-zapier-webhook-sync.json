{
  "name": "Dropbox â†’ Zapier (Webhook) : Legacy System Sync",
  "nodes": [
    {
      "parameters": {
        "operation": "onFileCreated",
        "path": "/legacy-sync"
      },
      "name": "Dropbox Trigger",
      "type": "n8n-nodes-base.dropboxTrigger",
      "typeVersion": 1,
      "position": [250, 200][250, 200]
    },
    {
      "parameters": {
        "url": "https://hooks.zapier.com/hooks/catch/1234567/abcde",
        "method": "POST",
        "jsonParameters": true,
        "options": {
          "bodyContentType": "json",
          "bodyParametersJson": "={\"name\": \"{{ $json.name }}\", \"path\": \"{{ $json.path_display }}\", \"size\": {{ $json.size }}}"
        },
        "authentication": "none"
      },
      "name": "Send to Zapier",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [450, 200][450, 200]
    }
  ],
  "connections": {
    "Dropbox Trigger": { "main": [["Send to Zapier", "main"]] }
  }
}
